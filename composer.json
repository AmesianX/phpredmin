{
    "authors": [
        {
            "name": "Sasan Rose",
            "email": "sasan.rose@gmail.com"
        }
    ],
    "name": "sasanrose/phpredmin",
    "description": "Yet another web interface for Redis",
    "version": "2.0.0-dev",
    "config": {
        "bin-dir": "bin"
    },
    "license": "MIT",
    "autoload": {
        "files": [
            "src-func/controllers.php",
            "src-func/dependencies.php",
            "src-func/envs.php",
            "src-func/i18n.php",
            "src-func/logger.php",
            "src-func/middlewares.php",
            "src-func/models.php",
            "src-func/routes.php",
            "src-func/secrets.php"
        ],
        "psr-4": {
            "PhpRedmin\\": [
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpRedmin\\Test\\": [
                "src-test"
            ]
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-gettext": "*",
        "ext-http": "^3.1",
        "ext-redis": "*",
        "kriswallsmith/assetic": "^1.4",
        "league/route": "^3.0",
        "pimple/pimple": "^3.0",
        "psr/http-message": "^1.0",
        "psr7-sessions/storageless": "^3.0.1",
        "twig/twig": "~2.0",
        "twig/extensions": "^1.5",
        "zendframework/zend-diactoros": "^1.6",
        "zendframework/zend-log": "^2.9",
        "zurb/foundation": "^6.4"
    },
    "require-dev": {
        "sebastian/phpcpd": "^2.0",
        "phpunit/phpunit": "^6.1",
        "phpmd/phpmd": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.1",
        "squizlabs/php_codesniffer": "^2.0"
    },
    "scripts": {
        "post-install-cmd": "./bin/install-assets",
        "post-update-cmd": "./bin/install-assets"
    }
}
